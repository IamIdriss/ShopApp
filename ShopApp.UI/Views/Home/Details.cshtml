@using ShopApp.UI.Models.Dtos
@model ProductDto
@{
    ViewData["Title"] = "PRODUCT - DETAILS";
}
<form method="post">
    <input asp-for="ProductId" hidden />
    <div class=" pb-3">
        <div class="card h-100 px-3">
            <div class="card-header bg-dark text-light row">
                <div class="col-12 col-md-6">
                    <h2 class="text-white">@Model.Name</h2>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h2 class="text-warning"> @(Model.Price + " CAD")</h2>
                </div>
            </div>
            <div class="card-body">
                <span style="margin-top:-10px;" class="badge bg-primary font25 mb-2 ">@Model.CategoryName</span>
                <div class="container-fluid p-2">
                    <div class="row">
                        <div class="col-12 col-lg-7 p-1 text-center">
                            <img src="@Model.ImageUrl" class="img-view" />
                        </div>
                        <div class="col-12 col-lg-5">
                            <div class="row container pl-3">
                                <div class="col-12">
                                    <p class="text-dark font25">@Html.Raw(Model.Description) </p>
                                </div>
                            </div>
                            <div class="container mt-4">
                                <div class="row">
                                    <div class="col-2 pt-1">
                                        <label asp-for="Quantity" class="font18 control-label"> </label>
                                    </div>
                                    <div class="col-10">
                                        <input type="number" min="1" asp-for="Quantity" class="form-control p-1" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-warning form-control font18 p-1 my-2">Add to Cart</button>
                                <a asp-action="Index" class="btn btn-dark form-control font18 p-1">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300&display=swap" rel="stylesheet">
<style>
    .card {
        border: solid 0px !important;
    }

    .img-view {
        width: 60%;
        object-fit: cover;
        margin-top: -20px;
    }

    .font18 {
        font-family: 'Rubik', sans-serif;
        font-size: 18px;
        font-weight: 700;
    }

    .font25 {
        font-family: 'Rubik', sans-serif;
        font-size: 25px;
        font-weight: 700;
    }
</style>
